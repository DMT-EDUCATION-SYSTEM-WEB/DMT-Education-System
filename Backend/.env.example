# =================================================================
# DMT EDUCATION SYSTEM - ENVIRONMENT VARIABLES
# =================================================================

# SERVER CONFIGURATION
PORT=3000
NODE_ENV=development

# SQL SERVER DATABASE CONFIGURATION
DB_SERVER=dmt-sqlserver
DB_DATABASE=DMT_EDUCATION_SYSTEM
DB_USER=sa
DB_PASSWORD=123
DB_TRUST_SERVER_CERTIFICATE=true

# FULL CONNECTION STRING (alternative)
# DATABASE_URL=Server=dmt-sqlserver;Database=DMT_EDUCATION_SYSTEM;User Id=sa;Password=123;TrustServerCertificate=True;

# JWT AUTHENTICATION
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# BCRYPT
BCRYPT_SALT_ROUNDS=10

# CORS CONFIGURATION
CORS_ORIGIN=http://localhost:5173

# FILE UPLOAD
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# LOGGING
LOG_LEVEL=info

